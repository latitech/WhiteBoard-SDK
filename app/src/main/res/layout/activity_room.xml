<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.latitech.whiteboard.type.WidgetType" />

        <import type="com.latitech.whiteboard.example.InputType" />

        <variable
            name="viewModel"
            type="com.latitech.whiteboard.example.RoomViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/insert_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="插入图片" />

                <Button
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="拍照" />

                <Button
                    android:id="@+id/insert_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="插入文件" />

                <Button
                    android:id="@+id/select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_bg_color_selector"
                    android:text="选择"
                    app:selected="@{viewModel.currentInputType == InputType.SELECT}" />

                <Button
                    android:id="@+id/pen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_bg_color_selector"
                    android:text="普通笔"
                    app:selected="@{viewModel.currentInputType == InputType.NORMAL}" />

                <Button
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_bg_color_selector"
                    android:text="荧光笔"
                    app:selected="@{viewModel.currentInputType == InputType.MARK}" />

                <Button
                    android:id="@+id/eraser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_bg_color_selector"
                    android:text="橡皮"
                    app:selected="@{viewModel.currentInputType == InputType.ERASE}" />

                <Button
                    android:id="@+id/laser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_bg_color_selector"
                    android:text="激光笔"
                    app:selected="@{viewModel.currentInputType == InputType.LASER}" />

                <Button
                    android:id="@+id/geometry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/btn_bg_color_selector"
                    android:text="几何图形"
                    app:selected="@{viewModel.currentInputType == InputType.GEOMETRY}" />

                <Button
                    android:id="@+id/screenshots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="截屏" />

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/page_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView">

            <ImageView
                android:id="@+id/pre_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="上一页"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.currentPage.pageNumber + `/` + viewModel.pageList.size()}" />

            <ImageView
                android:id="@+id/next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="下一页"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

            <ImageView
                android:id="@+id/new_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="新建页"
                app:srcCompat="@drawable/ic_baseline_add_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/page_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_navigation" />

        <com.latitech.whiteboard.WhiteBoardView
            android:id="@+id/white_board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="@{viewModel.whiteBoardRatio}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/page_list"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView" />

        <Button
            android:id="@+id/restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="还原笔迹"
            app:layout_constraintEnd_toEndOf="@+id/white_board"
            app:layout_constraintStart_toStartOf="@+id/white_board"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
            app:visibleGone="@{viewModel.canRecovery}" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/file_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
            app:visibleGone="@{viewModel.activeWidget!=null}">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/delete_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="删除文件"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_baseline_delete_outline_24" />

                <ImageView
                    android:id="@+id/pre_file_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="上一页"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
                    app:visibleGone="@{viewModel.activeWidget.type == WidgetType.FILE}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.activeWidget.currentPageNumber + `/` + viewModel.activeWidget.pageCount}"
                    app:visibleGone="@{viewModel.activeWidget.type == WidgetType.FILE}" />

                <ImageView
                    android:id="@+id/next_file_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="下一页"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:visibleGone="@{viewModel.activeWidget.type == WidgetType.FILE}" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/file_controller" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>